# National Archives Discovery API Configuration
API_KEY=your_api_key_here
API_BASE_URL=https://discovery.nationalarchives.gov.uk/API

# Rate Limiting (respect TNA guidelines)
MAX_REQUESTS_PER_DAY=3000
REQUESTS_PER_SECOND=1

# Local Database
DATABASE_PATH=./data/discovery.db

# Search Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_PATH=./data/vectors

# Web Interface
WEB_HOST=localhost
WEB_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/discovery.log
